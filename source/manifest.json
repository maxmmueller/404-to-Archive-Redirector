{
  "manifest_version": 3,
  "name": "404 Redirect",
  "description": "Never get lost again!",
  "version": "2.0",
  "icons": {
    "16": "/icon/16.png",
    "32": "/icon/32.png",
    "48": "/icon/48.png",
    "128": "/icon/128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "service.js"
  },

  "action": {
    "default_popup": ""
  },

  "permissions": ["activeTab", "tabs"]
}
